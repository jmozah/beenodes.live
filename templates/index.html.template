<html>
   <head>
      <meta content="text/html;charset=utf-8" http-equiv="Content-Type">
      <meta content="utf-8" http-equiv="encoding">
      <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
      <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
      <script src="https://www.mapquestapi.com/sdk/leaflet/v2.2/mq-map.js?key=L49Y52uI8C3mDFopCdsSyA0ar3Khb5Q2"></script>
      <style>
          .my-label {
            width: 200px;
            font-size:15px;
            background: transparent;
            border: none;
            box-shadow: none;
          }
      </style>
      <script type="text/javascript">
      window.onload = function() {

         var blueIcon = new L.Icon({
           iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-blue.png',
           shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
           iconSize: [20, 30],
           iconAnchor: [12, 30],
           popupAnchor: [1, -34],
           shadowSize: [30, 30]
         });

         var greenIcon = new L.Icon({
           iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-green.png',
           shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
           iconSize: [25, 41],
           iconAnchor: [12, 41],
           popupAnchor: [1, -34],
           shadowSize: [41, 41]
         });

         var greenSmallIcon = new L.Icon({
           iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-green.png',
           shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
           iconSize: [20, 30],
           iconAnchor: [12, 30],
           popupAnchor: [1, -34],
           shadowSize: [30, 30]
         });

         var orangeIcon = new L.Icon({
           iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-orange.png',
           shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
           iconSize: [20, 30],
           iconAnchor: [12, 30],
           popupAnchor: [1, -34],
           shadowSize: [30, 30]
         });

         var redIcon = new L.Icon({
           iconUrl: 'https://raw.githubusercontent.com/pointhi/leaflet-color-markers/master/img/marker-icon-2x-red.png',
           shadowUrl: 'https://cdnjs.cloudflare.com/ajax/libs/leaflet/0.7.7/images/marker-shadow.png',
           iconSize: [15, 25],
           iconAnchor: [12, 25],
           popupAnchor: [1, -34],
           shadowSize: [25, 25]
         });

         var city = {
             {% for n in city_list %}
                 {{n}}
             {% endfor %}
         }

          map = L.map('map', {
              layers: MQ.mapLayer()
          });

          var group = []
          for (var key in city) {
             if (city[key][2] > 0) {
                 lat = city[key][0]
                 lng = city[key][1]
                 marker1 = L.marker([lat, lng],{icon: greenIcon}).bindPopup(key +  ', count = ' + city[key][2]);
                 group.push(marker1);
                 marker1.on('mouseover', function (e) {
              	    this.openPopup();
                 });
                 marker1.on('mouseout', function (e) {
              	   this.closePopup();
                 });
             }

             if (city[key][3] > 0) {
                 lat = city[key][0]
                 lng = city[key][1]
                 marker2 = L.marker([lat, lng],{icon: orangeIcon}).bindPopup(key +  ', count = ' + city[key][3]);
                 group.push(marker2);
                 marker2.on('mouseover', function (e) {
              		this.openPopup();
              	 });
              	 marker2.on('mouseout', function (e) {
              		this.closePopup();
              	 });
             }

             if (city[key][4] > 0) {
                 lat = city[key][0]
                 lng = city[key][1]
                 marker3 = L.marker([lat, lng],{icon: redIcon}).bindPopup(key +  ', count = ' + city[key][4]);
                 group.push(marker3);
                 marker3.on('mouseover', function (e) {
              		this.openPopup();
              	 });
              	 marker3.on('mouseout', function (e) {
              		this.closePopup();
              	 });
             }
          }

          var marker4 = new L.marker([-55, 10], {icon: blueIcon}); //opacity may be set to zero
          marker4.bindTooltip("Total Nodes  : {{ total_peers }}", {permanent: true, className: "my-label", offset: [20, -15]});
          marker4.addTo(map);

          var marker5 = new L.marker([-58, 10], {icon: greenSmallIcon}); //opacity may be set to zero
          marker5.bindTooltip("Reachable from Crawler : {{ connected_peers }}", {permanent: true, className: "my-label", offset: [20, -15]});
          marker5.addTo(map);

          var marker6 = new L.marker([-61, 10], {icon: orangeIcon}); //opacity may be set to zero
          marker6.bindTooltip("Not Reachable (behind NAT) : {{ disconnected_peers }}", {permanent: true, className: "my-label", offset: [20, -15]});
          marker6.addTo(map);

          var marker7 = new L.marker([-66, 5 ], {opacity : 0.01}); //opacity may be set to zero
          marker7.bindTooltip("Snapshot taken @  {{ snapshot_time }} UTC", {permanent: true, className: "my-label", offset: [5, -20]});
          marker7.addTo(map);

          // add POI markers to the map and zoom to the features
          features = L.featureGroup(group).addTo(map);
          map.fitBounds(features.getBounds());
      }
      </script>
   </head>
   <body style='border:0; margin: 0'>
      <div id='map' style='width: 100%; height: 100%;'></div>
      <div id="info"></div>
   </body>
</html>

